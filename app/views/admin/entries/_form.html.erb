<%= link_to '返回列表', admin_entries_path %>
<div class="row">
  <div class="col-lg-12">
    <div class="box">
      <div class="body">
        <%= form_for([:admin, @entry], html: {class: "form-horizontal"}) do |f| %>
          <% if @entry.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>
              <ul>
                <% @entry.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label "时间: ", class: "control-label col-lg-4" %>
            <div id="datetimepicker2" class="input-append date col-lg-4">
              <%= f.text_field :real_time, class:'validate[required] form-control', 'data-format'=> "YYYY-MM-dd hh:mm:ss" %>
              <span class="add-on glyphicon glyphicon-calendar">
              </span>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "类型", class: "control-label col-lg-4"%>
            <div class="col-lg-4">
              <%= f.select :cost_type_id, generate_cost_type_options(f.object.cost_type_id) , class: 'form-control'%>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "金额（元）", class: "control-label col-lg-4"%>
            <div class="col-lg-4">
              <%= f.text_field :price, value: f.object.price , class: 'form-control'%>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "备注信息（可选）", class: "control-label col-lg-4" %>
            <div class="col-lg-4">
              <%= f.text_field :desc , class: 'form-control'%>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-4">
            </div>
            <div class="col-lg-4">
              <%= f.submit "提交" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function() {
      $('#datetimepicker2').datetimepicker({
format: 'yyyy-MM-dd hh:mm:ss',
startDate: '<%=Time.now%>',
autoclose: true,
pickTime: false,
// pickerPosition: 'bottom-right',
language:  'zh-CN'
});
      });
    </script>
