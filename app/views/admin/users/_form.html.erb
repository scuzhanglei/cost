<div class="row">
  <div class="col-lg-12">
    <div class="box">
      <div class="body">
        <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
          <div class="form-group">
            <%= f.label :用户名, class: "control-label col-lg-4" %><br>
            <div class="col-lg-4">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :邮箱, class: "control-label col-lg-4" %><br>
            <div class="col-lg-4">
              <%= f.text_field :email %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-4">
              <%= f.submit %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
